// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "auto_install_extensions": {
    "dart": true,
    "git-firefly": true,
    "github-theme": true,
    "html": true,
    "nix": true,
    "powershell": true,
    "ruby": true
  },
  "file_types": {
    "Ruby": ["Fastfile", "Appfile"]
  },
  "assistant": {
    "default_model": {
      "provider": "openai",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "buffer_font_family": "Consolas ligaturized v2",
  "preferred_line_length": 200,
  "soft_wrap": "preferred_line_length",
  "theme": {
    "mode": "system",
    "light": "Github Light",
    "dark": "One Dark"
  },
  "project_panel": {
    "folder_icons": false
  },
  "terminal": {
    "shell": {
      "program": "pwsh"
    }
  }
}
